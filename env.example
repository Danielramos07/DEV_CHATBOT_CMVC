# --- DB (ajusta se usares Docker/Postgres noutra porta) ---
PG_HOST=localhost
PG_PORT=5432
PG_DB=ai4governance
PG_USER=postgres
PG_PASS=admin

# --- Caminhos (relativos à raiz do projeto) ---
INDEX_PATH=backoffice/faiss.index
FAQ_EMB_PATH=backoffice/faq_embeddings.pkl
PDF_PATH=backoffice/pdfs
ICON_PATH=backoffice/app/static/icons

# --- CONFIGURAÇÕES DE AVATAR / SADTALKER ---
PIPER_VOICES_DIR=backoffice/app/video/models/voices
PIPER_VOICE_MALE=backoffice/app/video/models/voices/pt_PT-tugao-medium.onnx
PIPER_VOICE_FEMALE=backoffice/app/video/models/voices/dii_pt-PT.onnx
PIPER_VOICE_DEFAULT=backoffice/app/video/models/voices/dii_pt-PT.onnx

SADTALKER_PREPROCESS_DEFAULT=crop
SADTALKER_SIZE_DEFAULT=256
SADTALKER_IDLE_SECONDS=2
SADTALKER_BATCH_SIZE_DEFAULT=1
SADTALKER_ENHANCER_DEFAULT=
RESULTS_DIR=backoffice/app/video/results

# --- Vosk (STT) ---
# O setup.py faz download automático do modelo PT se não existir.
# Podes apontar para um mirror (opcional):
# VOSK_MODEL_URL=https://alphacephei.com/vosk/models/vosk-model-small-pt-0.3.zip

# --- CORS ---
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000,http://localhost:3000,http://127.0.0.1:3000

# --- Segurança media (vídeos) ---
# 0 = não exige assinatura; 1 = exige exp/nonce/sig nos endpoints /video/...
REQUIRE_SIGNED_MEDIA=0
# Recomenda-se definir quando REQUIRE_SIGNED_MEDIA=1 (se não, cai no SECRET_KEY do Flask)
# MEDIA_SIGNING_KEY=trocar-por-uma-chave-forte